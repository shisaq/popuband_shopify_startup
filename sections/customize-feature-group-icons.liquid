<div data-section-id="{{ section.id }}" class="block-gray {{ section.settings.style }}">
  <div class="container">
    <div class="space-lg"></div>
    <div class="space-lg visible-xs"></div>
    <div class="row text-center">
      <div class="col-xs-6 col-sm-3 col-lg-2 col-lg-offset-2">
        <img class="feature-icon" src="https://cdn.shopify.com/s/files/1/2021/3861/files/1ukulele.png" alt="">
        <div class="space-xxs"></div>
        <p class="h6">real<br>concert ukulele</p>
        <div class="space-sm"></div>
      </div>
      <div class="col-xs-6 col-sm-3 col-lg-2">
        <img class="feature-icon" src="https://cdn.shopify.com/s/files/1/2021/3861/files/2devices.png" alt="">
        <div class="space-xxs"></div>
        <p class="h6">smart device<br>compatible</p>
        <div class="space-sm"></div>
      </div>
      <div class="col-xs-6 col-sm-3 col-lg-2">
        <img class="feature-icon" src="https://cdn.shopify.com/s/files/1/2021/3861/files/3bluetooth.png" alt="">
        <div class="space-xxs"></div>
        <p class="h6">bluetooth<br>connection</p>
        <div class="space-sm"></div>
      </div>
      <div class="col-xs-6 col-sm-3 col-lg-2">
        <img class="feature-icon" src="https://cdn.shopify.com/s/files/1/2021/3861/files/4led.png" alt="">
        <div class="space-xxs"></div>
        <p class="h6">embedded<br>led lights</p>
        <div class="space-sm"></div>
      </div>
      <div class="col-xs-6 col-sm-3 col-lg-2 col-lg-offset-2">
        <img class="feature-icon" src="https://cdn.shopify.com/s/files/1/2021/3861/files/5gamepad.png" alt="">
        <div class="space-xxs"></div>
        <p class="h6">game<br>mode</p>
        <div class="space-sm"></div>
      </div>
      <div class="col-xs-6 col-sm-3 col-lg-2">
        <img class="feature-icon" src="https://cdn.shopify.com/s/files/1/2021/3861/files/6songs.png" alt="">
        <div class="space-xxs"></div>
        <p class="h6">extensive<br>song library</p>
        <div class="space-sm"></div>
      </div>
      <div class="col-xs-6 col-sm-3 col-lg-2">
        <img class="feature-icon" src="https://cdn.shopify.com/s/files/1/2021/3861/files/7recording.png" alt="">
        <div class="space-xxs"></div>
        <p class="h6"><br>recording</p>
        <div class="space-sm"></div>
      </div>
      <div class="col-xs-6 col-sm-3 col-lg-2">
        <img class="feature-icon" src="https://cdn.shopify.com/s/files/1/2021/3861/files/8share.png" alt="">
        <div class="space-xxs"></div>
        <p class="h6">easy social<br>sharing</p>
        <div class="space-sm"></div>
      </div>
    </div>
    <div class="space-xs"></div>
    <div class="space-md visible-xs"></div>
  </div>
</div>

{% schema %}
{
  "settings": [
    {
      "type": "select",
      "id": "style",
      "label": "Style",
      "options": [
        {
          "value": "default-style",
          "label": "Default"
        },
        {
          "value": "accent-style",
          "label": "Accent"
        },
        {
          "value": "contrast-style",
          "label": "Contrast"
        }
      ],
      "default": "default-style"
    }
  ],
  "presets": [
    {
      "category": "Customize",
      "name": "Feature Group Icons"
    }
  ]
}
{% endschema %}
